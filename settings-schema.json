{
  "head": {
    "type": "header",
    "description": "Wallpaper Shuffle Settings"
  },
  "generalSettings": {
    "title": "General Settings",
    "type": "header",
    "description": "Basic configuration options"
  },
  "linuxWpePath": {
    "type": "filechooser",
    "default": "~/linux-wallpaperengine/build",
    "description": "Linux Wallpaper Engine Path",
    "tooltip": "Path to the linux-wallpaperengine build directory",
    "select-dir": true
  },
  "wallpaperDir": {
    "type": "filechooser",
    "default": "~/.steam/debian-installation/steamapps/workshop/content/431960",
    "description": "Wallpaper directory",
    "select-dir": true
  },
  "logFile": {
    "type": "filechooser",
    "default": "/var/log/wallpaper-shuffle.log",
    "description": "Log file location",
    "select-dir": true
  },
  "screenRoot": {
    "type": "entry",
    "default": "DisplayPort-2",
    "description": "Screen Display Output",
    "tooltip": "The display output to show wallpapers on (e.g., DisplayPort-2, HDMI-1)"
  },
  "shuffleInterval": {
  "type": "spinbutton",
  "default": 10,
  "min": 1,
  "max": 1440,
  "step": 1,
  "units": "minutes",
  "description": "Shuffle interval"
  },
  "volumeLevel": {
    "type": "scale",
    "default": 50,
    "min": 0,
    "max": 100,
    "step": 1,
    "description": "Volume level (0-100)"
  },

  "muteAudio": {
    "type": "switch",
    "default": false,
    "description": "Mute audio"
  },
  "disableMouse": {
    "type": "switch",
    "default": false,
    "description": "Disable mouse interaction"
  },
  "currentStatus": {
    "type": "header",
    "description": "Current Status"
  },
  "currentIndex": {
    "type": "generic",
    "default": 246,
    "description": "Current index",
    "value": 330
  },
  "currentWallpaper": {
    "type": "generic",
    "default": "",
    "description": "Current wallpaper"
  },
  "previousWallpaper": {
    "type": "generic",
    "default": "",
    "description": "Previous wallpaper"
  },
  "queueLength": {
    "type": "generic",
    "default": 396,
    "description": "Queue length"
  },
  "shuffleStatus": {
    "type": "generic",
    "default": "Stopped",
    "description": "Shuffle status"
  },
  "displaySettings": {
    "type": "header",
    "description": "Display Settings"
  },
  "scalingMode": {
    "type": "combobox",
    "default": "default",
    "description": "Scaling Mode",
    "tooltip": "How the wallpaper should be scaled to fit the screen",
    "options": {
      "Default": "default",
      "Stretch": "stretch",
      "Fit": "fit",
      "Fill": "fill"
    }
  },
  "clampingMode": {
    "type": "combobox",
    "default": "clamp",
    "description": "Clamping Mode",
    "tooltip": "How the wallpaper edges should be handled",
    "options": {
      "Clamp": "clamp",
      "Border": "border",
      "Repeat": "repeat"
    }
  },
  "queue": {
    "type": "list",
    "description": "Wallpaper queue",
    "columns": [
      {"id": "id", "title": "Wallpaper ID", "type": "string"}
    ],
    "default": []
  },
  "performanceSettings": {
    "type": "header",
    "description": "Performance Settings"
  },
  "maxFps": {
    "type": "spinbutton",
    "default": 60,
    "min": 1,
    "max": 240,
    "step": 1,
    "description": "Maximum FPS",
    "tooltip": "Limit FPS to reduce battery usage"
  },
  "noAutomute": {
    "type": "switch",
    "default": false,
    "description": "Disable auto-mute",
    "tooltip": "Prevent wallpaper from auto-muting when other apps play sound"
  },
  "noAudioProcessing": {
    "type": "switch",
    "default": false,
    "description": "Disable audio processing",
    "tooltip": "Disable audio processing for backgrounds"
  },
  "noFullscreenPause": {
    "type": "switch",
    "default": false,
    "description": "Disable fullscreen pause",
    "tooltip": "Prevent wallpaper from pausing when apps go fullscreen"
  },
  "windowMode": {
    "type": "entry",
    "default": "",
    "description": "Window geometry (XxYxWxH)",
    "tooltip": "Run in window mode with specific geometry (e.g., 0x0x1920x1080)"
  },
  "assetsDir": {
    "type": "filechooser",
    "default": "",
    "description": "Custom assets directory",
    "select-dir": true,
    "tooltip": "Custom directory for wallpaper assets"
  }
}
